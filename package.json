{
  "name": "template-nodejs-mysql",
  "version": "1.0.0",
  "description": "A template for use a Node.js project with MySql and Jest",
  "main": "index.js",
  "scripts": {
    "start": "ENV_FILE_PATH='../../.env.prod' node dist",
    "start:dev": "ENV_FILE_PATH='../../.env' nodemon",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "ENV_FILE_PATH='../../.env' jest",
    "test:coverage": "ENV_FILE_PATH='../../.env' jest --coverage",
    "test:cache": "ENV_FILE_PATH='../../.env' jest --clearCache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyberShai/template-nodejs-mysql.git"
  },
  "author": "https://github.com/brycatch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CyberShai/template-nodejs-mysql/issues"
  },
  "homepage": "https://github.com/CyberShai/template-nodejs-mysql#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "babel-jest": "^26.6.3",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
